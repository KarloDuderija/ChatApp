<h1>{{title}}</h1>
<p>Welcome {{subtitle}}</p>
<div class="container"  id="TestBDC">
    <br/>
    <div  class="block">
        <ul id="ListOfUsers">
            {{#each user}}
                <li id={{this}} onclick="triggerTalk({{this}})">{{this}}</li>
            {{/each}}
        </ul>
        <ul id="ListOfRooms">
            {{#each room}}
                {{#if this.roomId}}
                <li id={{this.roomId}} onclick="enterRoom({{this.roomId}})">{{this.roomId}}</li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
    <button id="room" onclick="roomCreation()">CREATE ROOM</button>
    <button id="logout" onclick="logoutThisUser()"><a href="/logout">LOGOUT</a></button>
    <div class="room-modal">
        <div class="modal-content">
            <span class="close" onclick="exitRoom()">&times;</span>
            <br/>
            <div id="room-output">
            </div>
            <input id="rm-messages" type="text" placeholder="Message">
            <button id="rm-send" onclick="sendMessages()">Send</button>
        </div>
    </div>
    <div class="cr-room-modal">
        <div class="cr-modal-content">
            <input id="roomid" type="text" placeholder="Room Name">
            <br/>
            <button id="btn2" onclick="create()">OK</button>
        </div>
    </div>
</div>

